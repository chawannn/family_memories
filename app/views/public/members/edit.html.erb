<h2>メンバー情報編集</h2>

        <%= form_with model: @member, url: member_path(@member.id) do |f| %>

            <label for="member_name">名前</label>
            <%= f.text_field :name %>

             <label for="member_name_hiragana">なまえ</label>
            <%= f.text_field :member_name_hiragana %>

            <label for="member_image">写真</label>
            <%= f.file_field :profile_image, accept: "image/*" %>

            <label for="member_birthday">生年月日</label>
            <%= f.text_field :member_birthday %>

            <label for="member_nickname">ニックネーム</label>
            <%= f.text_field :member_nickname %>

            <label for="member_blood_type">血液型</label>
            <%= f.text_area :member_blood_type %>

            <label for="member_letter_color">担当カラー</label>
            <%= f.text_field :member_letter_color %>


            <%= f.submit '情報更新' %>


        <% end %>