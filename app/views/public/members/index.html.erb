<div class="row">
  <div class="col-md-3">
    <%= image_tag current_member.get_image(200, 200) %></br>
    <%= link_to"メンバー情報編集へ", edit_member_path(current_member.id) %>
  </div>

  <div class="col-md-9">
    <h2>メンバー一覧</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>名前</th>
          <th>なまえ</th>
          <th>写真</th>
          <th>生年月日</th>
          <th>ニックネーム</th>
          <th>血液型</th>
          <th>担当カラー</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @members.each do |member| %>
        <tr>
          <td><%= member.name %></td>
          <td><%= member.name_hiragana %></td>
          <td><%= image_tag member.get_image(100, 100) %></td>
          <td><%= member.birthday %></td>
          <td><%= member.nickname %></td>
          <td><%= member.blood_type %></td>
          <td><div class="btn btn-secondary" style="background-color:<%= member.letter_color %>;"></div></td>

          <td>
            <%= link_to "詳細", member_path(member) %>
            <% if current_member.main_user? || current_member == member %> |
              <%= link_to "編集", edit_member_path(member.id) %>
            <% end %>
            <% if current_member.main_user? %> |
              <%= link_to "削除", member_path(member.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<%= link_to "招待メールを送る", new_member_invitation_path if current_member.main_user? %>
<%= link_to "戻る", events_path %>