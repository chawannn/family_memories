<h1 class="my-5 d-flex justify-content-center"><i class="fa-solid fa-house mr-1"></i>メンバー詳細</h1>

<div class="row">
  <div class="col-md-10">
    <table class="table table-hover table-inverse member-table" >
      <tbody>

        <tr>
          <th>名前</th>
          <td><%= @member.name %></td>
        </tr>
        <tr>
          <th>なまえ</th>
          <td><%= @member.name_hiragana %></td>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <td><%= @member.nickname %></td>
        </tr>

        <tr>
          <th>生年月日</th>
          <td><%= @member.birthday %></td>
        </tr>

        <tr>
          <th>血液型</th>
          <td><%= @member.blood_type %></td>
        </tr>
        <tr>
          <th>担当カラー</th>
          <td><div class="btn btn-secondary" style="background-color:<%= @member.letter_color %>;"></div></td>
        </tr>
      </body>
    </table>
  </div>

  <div class="col-md-2">
    <%= image_tag @member.get_image(250, 250) %>
    <%= link_to"メンバー情報編集へ", edit_member_path(@member.id), class: "btn btn-sm btn-warning mt-1" %>
  </div>

</div>

<%= link_to "メンバー一覧へ", members_path, class: "btn btn-lg btn-secondary mt-3" %>
<%= link_to "戻る", :back, class: "btn btn-lg btn-secondary mt-3" %>
