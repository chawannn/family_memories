<div class="row">
  <div class="col-md-3">

  </div>
  <div class="col-md-8 offset-md-1">
    <h2>イベント詳細</h2>
    <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <th></th>
          <td>
            <%= link_to event_path(@event.id) do %>
              <%= image_tag @event.get_image(100, 100) %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>タイトル</th>
          <td><%= link_to @event.title, event_path(@event.id) %></td>
        </tr>
        <tr>
          <th>本文</th>
          <td><%= @event.body %></td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= link_to "編集", edit_event_path(@event.id) %> |
            <%= link_to "削除", event_path(@event.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
          </td>
        </tr>
        <tr>
          <th>assign_members</th>
          <td>
            <% @event.assign_members.each do |member| %>
              <%= link_to member.name, member_path(member) %>
            <% end %>
          </td>
        </tr>
        <tr>
          <% if @event.is_niced_by?(current_member) %>
            <p>
              <%= link_to event_is_nice_path(@event), method: :delete do %>
                ♥<%= @event.is_nices.count %> いいね
              <% end %>
            </p>
          <% else %>
            <p>
              <%= link_to event_is_nice_path(@event), method: :post do %>
                ♡<%= @event.is_nices.count %> いいね
              <% end %>
            </p>
          <% end %>
        </tr>
        <tr>
          <div>
            <p>コメント件数：<%= @event.comments.count %></p>
              <% @event.comments.each do |comment| %>
                <p><%= image_tag comment.member.get_profile_image(100,100) %></p>
                <%= comment.member.name %>
                <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
              <% end %>
          </div>
          <div>
            <%= form_with model: [@event, @comment] do |f| %>
              <%= f.text_area :comment, rows: '3', placeholder: "コメントをここに" %>
              <%= f.submit "送る" %>
            <% end %>
          </div>
        </tr>
      </tbody>
    </table>
  </div>
</div>

  <%= form_with model: @event do |f| %>
    <%= f.collection_check_boxes :assign_member_ids, current_member.families, :id, :name %>
    <%= f.submit %>
  <% end %>

  <%= link_to "戻る", events_path %>