<h1 class="my-5 d-flex justify-content-center"><i class="fa-solid fa-house mr-1"></i>カレンダー</h1>

<div class="d-flex">
  <%= link_to "頼まれ中", events_path(status: :done), class: "btn btn-outline-primary mr-2" %>
  <%= link_to "完了", events_path(status: :not_yet), class: "btn btn-outline-primary mr-2" %>
  <%= link_to "全投稿", events_path, class: "btn btn-outline-primary mr-2" %>
</div>

<%= month_calendar events: @events do |date, events| %>

  <%= link_to date.day, new_event_path(start_time: date) %>
    <ul>
      <% events.each do |event| %>
        <li><%= link_to event.title, event_path(event), class: "badge badge-secondary", style: "background-color:#{event.member.letter_color};" %></li>
      <% end %>
    </ul>

<% end %>

<%= link_to "メンバー一覧へ", members_path, class: "btn btn-lg btn-secondary mt-3" %>
