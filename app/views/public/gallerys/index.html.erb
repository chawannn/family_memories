<h2 class="mt-4 d-flex justify-content-center">＜写真一覧＞</h2>

<div class="row">
  <% @events.each do |event| %>
    <% event.images.each do |image| %>
      <div class="col-3">
        <%= link_to event_path (event.id) do %>
          <span><%= image_tag image.variant(gravity: :center, resize: "200x200", crop: "100x100+0+0").processed, class: "my-2", style: "width:100%;" %></span>
        <% end %>
          <span><%= event.title %></span>
          <span><%= event.member.name %></span>
    　</div>
    <% end %>
  <% end %>
</div>