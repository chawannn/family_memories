<h2 class="mt-4 d-flex justify-content-center">＜写真一覧＞</h2>

<div class="row">
  <% @events.each do |event| %>
    <% event.images.each do |image| %>


      <div class="col-3">
        
        <%= link_to event_path (event.id) do %>
          <span><%= image_tag image.variant(gravity: :center, resize: "100x100^", crop: "100x100+0+0").processed, class: "my-2", style: "width:100%;" %></span>
        <% end %>
        <div class="d-flex justify-content-between">
          <span><%= event.member.name %></span>
          <span><%= l(event.created_at, format: :long) %></span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>